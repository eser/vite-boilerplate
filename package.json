{
  "name": "vite-boilerplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "serve": "node server",
    "serve:prod": "cross-env NODE_ENV=production node server",
    "debug": "node --inspect-brk server",
    "debug:prod": "cross-env NODE_ENV=production node --inspect-brk server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "generate": "vite build --outDir dist/server/static && cross-env PRERENDER=1 vite build --ssr src/entry-server.tsx --outDir dist/server",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@mantine/core": "^5.0.3",
    "@mantine/hooks": "^5.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "@mdx-js/rollup": "^2.1.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.0",
    "@vitest/ui": "^0.21.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "fs-extra": "^10.1.0",
    "jsdom": "^20.0.0",
    "serve-static": "^1.15.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.21.0"
  }
}
